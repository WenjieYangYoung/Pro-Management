<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".login.ApplyActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="600dp"
        app:cardBackgroundColor="#60000000"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/material_dynamic_neutral90"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <EditText
                android:id="@+id/edit_apply_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:ems="10"
                android:hint="Fullname"
                android:imeOptions="flagNavigateNext"
                android:singleLine="true"
                android:textColor="@color/material_dynamic_neutral90"
                android:textColorHint="@color/material_dynamic_neutral90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.025" />

            <EditText
                android:id="@+id/edit_apply_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:ems="10"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/material_dynamic_neutral90"
                android:textColorHint="@color/material_dynamic_neutral90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_apply_fullname"
                app:layout_constraintVertical_bias="0.01" />

            <EditText
                android:id="@+id/edit_apply_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:ems="10"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/material_dynamic_neutral90"
                android:textColorHint="@color/material_dynamic_neutral90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_apply_email"
                app:layout_constraintVertical_bias="0.01" />

            <EditText
                android:id="@+id/edit_apply_password_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:backgroundTint="@color/material_dynamic_neutral90"
                android:ems="10"
                android:hint="Password confirm"
                android:imeOptions="actionNext"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/material_dynamic_neutral90"
                android:textColorHint="@color/material_dynamic_neutral90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_apply_password"
                app:layout_constraintVertical_bias="0.01" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="210dp"
                android:layout_height="130dp"
                app:cardBackgroundColor="#25a9a9a9"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_apply_password_confirm"
                app:layout_constraintVertical_bias="0.05">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edit_apply_skills"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:backgroundTint="@android:color/transparent"
                        android:ems="10"
                        android:gravity="bottom|start"
                        android:paddingTop="0px"
                        android:paddingBottom="0px"
                        android:singleLine="true"
                        android:text="Skill: "
                        android:textColor="@color/material_dynamic_neutral90"
                        android:textColorHint="@color/material_dynamic_neutral90"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edit_apply_password_confirm"
                        app:layout_constraintVertical_bias="0.01" />


                    <com.example.pro_management.ui.gallery.TagView
                        android:id="@+id/tag_skill_list"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        tools:ignore="MissingClass">

                        <TextView
                            android:id="@+id/apply_skill_android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/inline_tag"
                            android:text="Android"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/apply_skill_java"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/inline_tag"
                            android:text="Java"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/apply_skill_kotlin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/inline_tag"
                            android:text="Kotlin"

                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/apply_skill_csharp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/inline_tag"
                            android:text="C#"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/apply_skill_html"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/inline_tag"
                            android:text="HTML"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/apply_skill_js"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/inline_tag"
                            android:text="JavaScript"
                            android:textSize="15sp" />


                        <TextView
                            android:id="@+id/apply_skill_cpp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/inline_tag"
                            android:text="C++"
                            android:textSize="15sp" />

                    </com.example.pro_management.ui.gallery.TagView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_apply_confirm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_500"
                android:text="Confirm"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                app:layout_constraintVertical_bias="0.63" />

            <Button
                android:id="@+id/btn_apply_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:text="Back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/apply_switch_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a team manager"
                app:layout_constraintBottom_toTopOf="@+id/btn_apply_confirm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>