<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_grey">

    <EditText
        android:id="@+id/edit_new_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4682B4"
        android:ems="10"
        android:hint="Task Name"
        android:inputType="textPersonName"
        android:textColor="#4682B4"
        android:textColorHint="#4682B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_new_task_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4682B4"
        android:ems="10"
        android:hint="Member Email"
        android:inputType="textPersonName"
        android:textColor="#4682B4"
        android:textColorHint="#4682B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_new_task_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Deadline"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/edit_new_task_descri"
        app:layout_constraintTop_toBottomOf="@+id/edit_new_task_descri" />

    <EditText
        android:id="@+id/edit_new_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4682B4"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:textColor="#4682B4"
        android:textColorHint="#4682B4"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/ben_new_task_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_new_task_time" />

    <EditText
        android:id="@+id/edit_new_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4682B4"
        android:ems="10"
        android:hint="Time"
        android:inputType="time"
        android:textColor="#4682B4"
        android:textColorHint="#4682B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_new_task_date" />

    <EditText
        android:id="@+id/edit_new_task_descri"
        android:layout_width="209dp"
        android:textColor="#4682B4"
        android:backgroundTint="#4682B4"
        android:hint="Description"
        android:textColorHint="#4682B4"
        android:layout_height="77dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_new_task_email" />
</androidx.constraintlayout.widget.ConstraintLayout>